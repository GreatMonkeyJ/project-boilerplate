extends components/layouts/layout

block append contents
  section#home
    div.inner
      strong.title HyunJiwon
      div.content
        span Front-End Developer
      i.scrollDown ScrollDown

  section#experience
    div.inner
      strong.title Experience
      div.content
        - var experienceData = require('./src/js/data/experience.js');
        ul.expList
          each experience in experienceData
            li
              div.date
                span.start= experience.date.start
                span.end= experience.date.end
              div.company
                strong.employer= experience.company.employer
                span.position= experience.company.position
                div.details !{experience.company.detail}

  section#skills
    div.inner
      strong.title Skills
      div.content
        - var skills = require('./src/js/data/skills.js');
        ul.skillList
          each skill in skills
            li(style=`border-color:${skill.pointColor}; --percent:${skill.proficiency};`)
              div(style=`background-color:${skill.pointColor};` class="info")
                strong.name= skill.name
                span.proficiency= skill.proficiency
              div.wave

  section#portfolio
    div.inner
      strong.title Portfolio
      div.content
        ul.portfolioList
          li
            div.info
              div.logo
                strong.title Cafe24
                  span Store Global
              div.detail
                p.desc Reponsive Project
                button(type="button" class="view" disabled="disabled") Protected
          li
            div.info
              div.logo
                strong.title Cafe24
                  span Recipe
              div.detail
                p.desc Solution Project
                a(href="//recipe.cafe24.com/" target="_blank" class="view") View
          li
            div.info
              div.logo
                strong.title Cafe24
                  span Desiagn JP
              div.detail
                p.desc Solution Project
                a(href="//design.cafe24.co.jp/" target="_blank" class="view") View
          li
            div.info
              div.logo
                strong.title Lab543
              div.detail
                p.desc Admin ERP Project
                button(type="button" class="view" disabled="disabled") Protected
          li
            div.info
              div.logo
                strong.title CGV
              div.detail
                p.desc Web/Mobile Renewal
                a(href="//www.cgv.co.kr/" target="_blank" class="view") View
          li
            div.info
              div.logo
                strong.title Imvely
              div.detail
                p.desc Web/Mobile Renewal
                a(href="//www.imvely.com/" target="_blank" class="view") View

  section#contact
    div.inner
      strong.title Contact
      div.content
        form(action="https://formspree.io/xayynlqk" method="POST" id="contactForm")
          input(type="text" name="name" id="name" placeholder="이름" required)
          input(type="email" name="email" id="email" placeholder="이메일" required)
          textarea(name="message" id="message" placeholder="메시지를 입력해주세요." required)
          button(type="submit" id="contactFormSubmit") 전송

